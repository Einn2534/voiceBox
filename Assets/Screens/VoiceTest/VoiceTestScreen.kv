#:import dp kivy.metrics.dp

<VoiceTestScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(12)

        Label:
            id: recordStatus
            text: "待機中"
            markup: True
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'

        ScrollView:
            size_hint_y: 0.55
            do_scroll_x: False
            Label:
                id: apiResponse
                text: "ここに音声の書き起こしが表示されます"
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'top'

        TextInput:
            id: apiRequest
            hint_text: 'メモ (任意)'
            multiline: True
            size_hint_y: None
            height: dp(100)

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(12)
            Button:
                text: "録音開始"
                on_press: root.start_recording()
            Button:
                text: "停止して文字起こし"
                on_press: root.stop_and_transcribe()
            Button:
                text: "取消"
                on_press: root.cancel_recording()

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(12)
            Button:
                text: "テキストをコピー"
                on_press: root.copy_to_clipboard()
            Button:
                text: "クリア"
                on_press: root.clear_transcript()
            Button:
                text: "Top"
                on_press: app.root.current = 'home'
